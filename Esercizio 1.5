/*Scrivere una funzione ricorsiva f che, dato un intero N, restituisca la somma dei primi N interi dispari.
 Scrivere un programma che prenda in input uninteroxe stampi il valore di f(x).
L'unica riga dell'input contiene il valore x.L'unica riga dell'output contiene 
la somma dei primi x numeri dispari.*/

#include<iostream>

using namespace std;

int sommaDispari(int N, int s){
	if(N<=0)
		return s;
	if(N%2==0) return sommaDispari(N-1, s); //viene eseguita soltanto la prima volta, se N Ã¨ pari
	else{
		s+= N;
		return sommaDispari(N-2,s); //salta direttamente i numeri pari
	}
	return sommaDispari(N, s);	
}

int main(){
	int x;
	cin >> x;
	cout << sommaDispari(x, 0);
	return 0;
}
